<h1 class="mt-3"><%= @list.name %></h1>

<%= link_to "Add a Movie to your list", new_list_bookmark_path(@list), class:"btn btn-primary m-3" %>



<div class="lists-card-grid my-3 container">
  <% @list.movies.each do |movie| %>
    <div class="card-product">
      <img src= <%= movie.poster_url %> >
      <div class="card-product-infos">
        <h2> <%= link_to movie.title, list_movie_path(@list, movie) %></h2>
             <p>Rating: <%= movie.rating %></p>
      </div>
    </div>
  <% end %>
</div>